ppq <- midi.get.ppq()
#midi.set.tempo(52)
midi.set.tempo(35)

pitch.upper <- c(F, E, Gs, A,
                 B, E, B, Cs + 12, A,
                 Fs, A, B, F, E,
                 E, Cs,
                 Cs, E, Fs, B - 12, A - 12,
                 Cs, E, Fs, G, Fs,
                 Fs, C + 12, B, A, B,
                 Gs, F, Gs, B, E + 12,
                 E + 12, Cs + 12, A, Bb, A,
                 B, Gs, F, E, Gs,
                 A)
dur.upper <- c(2, 2, 2, 2,
               2, 1, 1, 2, 2,
               2, 1, 1, 2, 2,
               6, 2,
               2, 1, 1, 2, 2,
               2, 1, 1, 2, 2,
               2, 1, 1, 2, 2,
               4, 1, 1, 1, 1,
               2, 1, 1, 2, 2,
               2, 1, 1, 2, 2,
               8) / 2

pitch.lower <- c(D + 12, Cs + 12, B, A,
                 Gs, A, Cs + 12,
                 D + 12, B, Gs,
                 A, F, E,
                 A, D + 12,
                 E + 12, Cs + 12, D + 12, As, Fs,
                 B, B + 12, Ds + 12, Fs + 12,
                 E + 12, Gs + 12, B + 12, D + 24,
                 A + 12, G + 12, Fs + 12,
                 F + 12, D + 12, E + 12, B,
                 A)

dur.lower <- c(2, 2, 2, 2,
               4, 2, 2,
               4, 2, 2,
               2, 2, 4,
               4, 4,
               2, 1, 1, 2, 2,
               2, 2, 2, 2,
               1, 1, 1, 5,
               4, 2, 2,
               2, 2, 2, 2,
               8) / 2

tick.upper <- cumsum(c(0, dur.upper[0:(length(dur.upper) - 1)]))
notes.upper <- midi.note(tick.upper * ppq, dur.upper * ppq, pitch.upper + 12 * 4, channel=0)

tick.lower <- cumsum(c(0, dur.lower[0:(length(dur.lower) - 1)]))
notes.lower <- midi.note(tick.lower * ppq, dur.lower * ppq - 4, pitch.lower + 12 * 3, channel=1)

notes.upper2 <- midi.note(tick.upper * ppq, dur.upper * ppq - 4, pitch.upper + 12 * 4, channel=2)
notes.lower2 <- midi.note(tick.lower * ppq, dur.lower * ppq - 4, pitch.lower + 12 * 3, channel=3)

midi.play(rbind(notes.upper, notes.lower))

